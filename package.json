{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:scraper": "cd packages/scraper && ts-node src/scraper.ts",
    "start:web": "cd packages/web-ui && next dev",
    "build:web": "pnpm --filter web-ui run build",
    "build:scraper": "pnpm --filter scraper run build",
    "serve:web": "pnpm --filter web-ui run start",
    "build": "pnpm run build:web && pnpm run build:scraper",
    "prestart": "node scripts/init-db.js",
    "start": "pm2-runtime ecosystem.config.cjs",
    "backup:sqlite": "sqlite3 $DB_PATH '.backup /data/backups/app-$(date +%F-%H%M).db'"
  },
  "dependencies": {
    "pm2": "^5.4.0"
  }
}